.content-box {
    width: 100%;
}

textarea {
    height: 500rpx !important;
}

.upload-img-wrap {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 30rpx;
}

.upload-img-box {
    position: relative;
    overflow: hidden;
    width: 150rpx;
    height: 150rpx;
    border-radius: 10rpx;
    border: 1rpx solid #dcdcdc;
    display: flex;
    align-items: center;
    justify-content: center;
}

.upload-img-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.upload-img-btn>image {
    display: block;
    width: 150rpx;
    height: 150rpx;
}

.upload-img-btn>view {
    padding-top: 5rpx;
    line-height: 1;
    color: #999;
    font-size: 24rpx;
}

.close-box {
    position: absolute;
    right: 10rpx;
    top: 10rpx;
    z-index: 10;
}

.upload-img-btn-hover {
    opacity: 0.7;
}