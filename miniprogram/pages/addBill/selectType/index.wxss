.container {
    background: #f5f5f5;
}

.type-box {
    width: 100%;
    position: relative;
    display: flex;
    flex: 1;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-bottom: 100rpx;
}

.type-item {
    width: 60%;
    height: 200rpx;
    border-radius: 15rpx;
    margin-bottom: 50rpx;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.type-item:last-child {
    margin-bottom: 0;
}

.type-item>.iconfont {
    color: #C7143D;
    font-size: 60rpx;
    font-weight: bold;
    padding-top: 5rpx;
}

.type-item>.name {
    font-size: 36rpx;
    color: #C7143D;
    padding-left: 30rpx;
}