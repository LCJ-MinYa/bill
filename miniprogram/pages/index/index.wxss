.container {
    position: relative;
    height: auto !important;
}

.add-btn {
    position: fixed;
    bottom: 40rpx;
    right: 40rpx;
    width: 100rpx;
    height: 100rpx;
    background: #C7143D;
    border-radius: 100%;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.add-btn-hover {
    opacity: 0.7;
}

.head-wrap {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 300rpx;
    background: #C7143D;
    display: flex;
    align-items: center;
    flex-direction: column;
    padding: 10rpx 40rpx 40rpx;
    z-index: 9;
}

.balance-box {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    height: 150rpx;
    width: 100%;
    color: #fff;
}

.balance-box>.price {
    font-size: 60rpx;
    line-height: 1;
    padding-bottom: 20rpx;
}

.balance-box>.title {
    font-size: 24rpx;
    line-height: 1;
}

.income-expense-box {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100rpx;
    width: 100%;
}

.income-expense-box>view {
    display: flex;
    flex: 1;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.income-expense-box>view:first-child {
    border-right: 1rpx solid #fff;
}

.income-expense-box>view>.price {
    color: #fff;
    font-size: 42rpx;
    line-height: 1;
    padding-bottom: 20rpx;
}

.income-expense-box>view>.title {
    color: #fff;
    font-size: 24rpx;
    line-height: 1;
}

.bill-box {
    margin-top: 300rpx;
    display: flex;
    width: 100%;
    align-items: center;
    flex-direction: column;
    position: relative;
    overflow: hidden;
}

.bill-item-box {
    position: relative;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.bill-content-box {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.account-item-box {
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    height: 40rpx;
}

.account-item-box:first-child {
    margin-bottom: 10rpx;
}

.bill-account-box {
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.account-item-box>view.iconfont {
    font-size: 36rpx;
}

.icon-weixinzhifu {
    color: rgba(9, 187, 7, 1);
}

.icon-zhifubao {
    color: rgba(2, 169, 241, 1);
}

.icon-yinhangqia1 {
    font-size: 34rpx !important;
    color: rgba(250, 65, 65, 1);
}

.account-item-box>view.name {
    font-size: 24rpx;
    color: #666;
    padding-left: 20rpx;
}

.account-item-box>view.detail {
    font-size: 20rpx;
    color: #666;
}

.bill-msg-box {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: flex-end;
}

.bill-msg-box>view.money {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    font-size: 32rpx;
    color: #000;
    height: 40rpx;
    margin-bottom: 10rpx;
}

.bill-msg-box>view.detail {
    height: 40rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    font-size: 20rpx;
    color: #666;
}

.bill-comment-box {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    font-size: 20rpx;
    color: #666;
    height: 40rpx;
}

.no-account-box {
    width: 100%;
    position: relative;
    display: flex;
    flex: 1;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 35% 0;
    margin-top: 300rpx;
}

.no-account-box>view {
    font-size: 28rpx;
    color: #dedede;
}

.icon-meiyoushuju {
    padding-bottom: 30rpx;
    font-size: 100rpx !important;
}