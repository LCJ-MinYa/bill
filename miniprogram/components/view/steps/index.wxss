.step-box {
    width: 100%;
    display: flex;
    padding: 40rpx;
}

.step-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}

.step-strip {
    position: relative;
    width: 100%;
    height: 8rpx;
    background: #D2D2D2;
}

.step-index {
    top: 29rpx;
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    background: #D2D2D2;
    border-radius: 100%;
    font-size: 16rpx;
    line-height: 30rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.active {
    background: #C7143D !important;
}

.step-name {
    color: #D2D2D2;
    font-size: 21rpx;
    padding-top: 25rpx;
}

.text-active {
    color: #C7143D !important;
}